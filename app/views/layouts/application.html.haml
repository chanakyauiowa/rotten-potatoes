!!!
%html
  %head
    %title Rotten Potatoes!
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %h1.title Rotten Potatoes!
    
    #main
      - if session[:notice]
        #notice.message= session[:notice]
        
      - if !@current_user
        = button_to "Login/ Signup", login_path, method: :get, :id => 'signuplogin'
      - else
        = button_to "Logout", logout_path, method: :delete, :id => 'logout'
        
        
      - if flash[:notice]
        #notice.flash_message= flash[:notice]
      - elsif flash[:warning]
        #warning.flash_message= flash[:warning]
      
        
        
      = yield